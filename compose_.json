{
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/michalmaterniak/zadmor"
        }
    ],
    "require": {
        "commitm/zadmor": "^1.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.0",
        "phpunit/phpunit": "11.0.*"
    },
    "autoload": {
        "psr-4": {
            "App\\MichalM\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TestApp\\MichalM\\": "tests/",
            "TestMichalM\\": "vendor/commitm/zadmor/tests/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "./vendor/bin/phpunit"
        ]
    }
}
